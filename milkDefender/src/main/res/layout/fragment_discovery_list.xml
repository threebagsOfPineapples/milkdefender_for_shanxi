<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/discovery_list_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/discovery_list_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="母乳是宝宝营养最好的来源"
        android:textSize="18sp" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/discovery_list_article_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当媒体传来海淘、代购奶粉、进口原罐和矿物油、杀菌剂、有害油脂，还有听了就头痛的化学物质，妈妈们瞬间恐慌了。" />
</LinearLayout>