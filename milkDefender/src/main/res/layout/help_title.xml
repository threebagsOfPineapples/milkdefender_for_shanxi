<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/pink" >

   <ImageView 
                       
        android:id="@+id/title_back_imageButton"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" 
        android:src="@drawable/mm_title_back_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/title_back_imageButton"
        android:gravity="center"
        android:text="@string/title_help_text"
        android:textSize="20sp" 
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/title_help_tellUs"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
       android:layout_centerVertical="true"
        android:layout_alignTop="@+id/title_back_imageButton"
        android:layout_marginEnd="10dp"
        android:src="@drawable/bg_iv_tellus" />

</RelativeLayout>