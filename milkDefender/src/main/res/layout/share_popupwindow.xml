<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_demo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginTop="100dp"
 	android:layout_marginBottom="100dp"
    android:background="@drawable/bg_wx_share"
    android:gravity="center"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="2.5" >

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_wx_share_no"
            android:background="@drawable/bf_wx_share_window"
            android:padding="10dp"
            android:text="知道吗？已经有95%的麻麻爱心分享自己的购买信息啦！赠人玫瑰，手有余香，让我们一起呵护宝宝健康！你这么有爱，又长这么好看，献爱心怎能少了你呢！"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_wx_share_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/bg_icon_wx_share_no" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="10dp"
        android:background="@color/pink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp" >

            <ImageView
                android:id="@+id/fragment_detection_share_iv_milk_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_icon_wx_share_position" />

            <EditText
                android:paddingStart="10dp"
                android:id="@+id/et_wx_share_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/fragment_detection_share_iv_milk_position"
                android:background="@drawable/bg_wx_share_edit"
                android:hint="采购地点" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
             >
            <ImageView
                android:id="@+id/fragment_detection_share_iv_milk_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_icon_wx_share_price" />
            <EditText
                android:paddingStart="10dp"
                android:id="@+id/et_wx_share_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/fragment_detection_share_iv_milk_price"
                android:background="@drawable/bg_wx_share_edit"
                android:hint="采购价格" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pink" />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_share_wx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:src="@drawable/bg_icon_wx_share_friends" />

        <ImageView
            android:id="@+id/iv_share_wx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/bg_icon_wx_share_moments" />
    </LinearLayout>

</LinearLayout>