<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/oblate_of"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@color/pink"
            android:gravity="center"
            android:src="@drawable/bg_dialog_iv" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_positiveButton_again"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/dialog_corner_white_red"
                android:gravity="center"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_negativeButton_again"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/alert_dialog_corner"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>